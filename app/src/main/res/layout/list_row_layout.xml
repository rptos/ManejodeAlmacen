<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:minHeight="50dp"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/fondo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/list_row_pressed_bg"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/thumbImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="#FFFFFF" />

        <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:textColor="@drawable/list_item_text_selector"
                android:textStyle="bold"
                android:typeface="sans"
                android:layout_toRightOf="@+id/thumbImage" />

        <TextView
            android:id="@+id/reporter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:textColor="@drawable/list_item_text_selector"
            android:textSize="12sp"
            android:layout_below="@+id/title"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/thumbImage"
            android:layout_toEndOf="@+id/thumbImage" />

        <LinearLayout
            android:id="@+id/LinearLayoutInv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/reporter"
            android:layout_toRightOf="@+id/thumbImage"
            android:layout_toEndOf="@+id/thumbImage">

            <TextView
                android:id="@+id/Existencia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:textColor="@drawable/list_item_text_selector"
                android:textStyle="bold"
                android:typeface="sans" />
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>